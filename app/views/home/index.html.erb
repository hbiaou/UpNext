<div class="min-h-screen bg-background">
  <div class="container mx-auto p-6 max-w-6xl">
    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">UpNext</h1>
      <p class="text-muted-foreground">Your AI-powered task and note manager</p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Tasks Section -->
      <div class="space-y-6" data-controller="tasks">
        <div class="bg-card border border-border rounded-lg p-6">
          <div class="flex items-center gap-3 mb-6">
            <svg class="h-6 w-6 text-primary fill-current" viewBox="0 0 24 24">
              <path d="M22,16A2,2 0 0,1 20,18H8C6.89,18 6,17.1 6,16V4C6,2.89 6.89,2 8,2H20A2,2 0 0,1 22,4V16M16,6H12V8H16V6M16,10H12V12H16V10M16,14H12V16H16V14M10,6H8V8H10V6M10,10H8V12H10V10M10,14H8V16H10V14Z"/>
            </svg>
            <h2 class="text-xl font-semibold">Tasks</h2>
          </div>

          <!-- Task Form -->
          <form data-tasks-target="form" data-action="submit->tasks#create" class="space-y-4 mb-6">
            <input
              data-tasks-target="title"
              type="text"
              placeholder="Task title"
              class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"
              required
            >
            <textarea
              data-tasks-target="description"
              placeholder="Description (optional)"
              rows="2"
              class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary resize-none"
            ></textarea>
            <button
              type="submit"
              class="flex items-center gap-2 bg-primary text-primary-foreground px-4 py-2 rounded-md hover:bg-primary/90 font-medium"
            >
              <svg class="h-4 w-4 fill-current" viewBox="0 0 24 24">
                <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
              </svg>
              Add Task
            </button>
          </form>
        </div>

        <!-- Tasks List -->
        <div data-tasks-target="list" class="space-y-3">
          <!-- Tasks will be rendered here by Stimulus controller -->
        </div>
      </div>

      <!-- Notes Section -->
      <div class="space-y-6" data-controller="notes">
        <div class="bg-card border border-border rounded-lg p-6">
          <div class="flex items-center gap-3 mb-6">
            <svg class="h-6 w-6 text-primary fill-current" viewBox="0 0 24 24">
              <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
            </svg>
            <h2 class="text-xl font-semibold">Notes</h2>
          </div>

          <!-- Note Form -->
          <form data-notes-target="form" data-action="submit->notes#create" class="space-y-4 mb-6">
            <input
              data-notes-target="title"
              type="text"
              placeholder="Note title"
              class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"
              required
            >
            <textarea
              data-notes-target="content"
              placeholder="Write your note..."
              rows="4"
              class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"
              required
            ></textarea>
            <button
              type="submit"
              class="flex items-center gap-2 bg-primary text-primary-foreground px-4 py-2 rounded-md hover:bg-primary/90 font-medium"
            >
              <svg class="h-4 w-4 fill-current" viewBox="0 0 24 24">
                <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
              </svg>
              Add Note
            </button>
          </form>
        </div>

        <!-- Notes List -->
        <div data-notes-target="list" class="space-y-3">
          <!-- Notes will be rendered here by Stimulus controller -->
        </div>

        <!-- Note Modal -->
        <div 
          data-notes-target="modal" 
          class="hidden fixed inset-0 z-50 overflow-y-auto"
          data-action="click->notes#hideModal"
        >
          <div class="flex items-center justify-center min-h-screen px-4">
            <div class="fixed inset-0 bg-black/50"></div>
            <div class="relative bg-card border border-border rounded-lg max-w-2xl w-full max-h-[80vh] overflow-hidden" data-action="click->notes#" onclick="event.stopPropagation()">
              <div class="flex items-center justify-between p-6 border-b border-border">
                <h3 data-notes-target="modalTitle" class="text-lg font-semibold text-foreground"></h3>
                <button data-action="click->notes#hideModal" class="text-muted-foreground hover:text-foreground">
                  <svg class="h-5 w-5 fill-current" viewBox="0 0 24 24">
                    <path d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
                  </svg>
                </button>
              </div>
              <div data-notes-target="modalContent" class="p-6 overflow-y-auto max-h-[60vh]">
                <!-- Note content will be inserted here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>